<br /><h2>In your cart</h2><br />

<table class="table">
  <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Size</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
  <% @items.each_with_index do |item, index| %>
    <tr>
        <th scope="row"><%= index+1 %></th>
        <td><%= item[0].title %></td>
        <td><%= item[0].size %></td>
        <td><%= item[0].price %></td>
        <td><%= item[1] %></td>
    </tr>
  <% end %>
  </tbody>
</table>